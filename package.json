{
  "name": "docusaurus-tailwindcss",
  "version": "1.0.0",
  "description": "Docusaurus v2/v3 plugin to provide support for Tailwind CSS.",
  "repository": "https://github.com/Rileran/docusaurus-tailwindcss",
  "author": {
    "name": "Rileran",
    "email": "a.rileran@gmail.com",
    "url": "https://github.com/Rileran"
  },
  "license": "MIT",
  "keywords": [
    "docusaurus",
    "docusaurus-plugin",
    "tailwindcss"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/docusaurus-tailwindcss.esm.js",
  "size-limit": [
    {
      "path": "dist/docusaurus-tailwindcss.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/docusaurus-tailwindcss.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "autoprefixer": "10.4.14",
    "postcss": "8.4.24",
    "tailwindcss": "3.3.2"
  },
  "peerDependencies": {
    "@docusaurus/core": ">=3.0.0-alpha.0 || >=2.0.0-alpha.0 || >=0.0.0-3892"
  },
  "devDependencies": {
    "@docusaurus/types": "3.0.0-alpha.0",
    "@size-limit/preset-small-lib": "8.2.4",
    "husky": "8.0.3",
    "size-limit": "8.2.4",
    "tsdx": "0.14.1",
    "tslib": "2.5.3",
    "typescript": "5.1.3"
  }
}
